<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- HERE ARE THE PHANTOM TESTS  -->
        <template id="assets_frontend_shop_tour_shop_tests" inherit_id="website_sale.assets_editor" name="Shop">
            <xpath expr="//script[@src='/website_sale/static/src/js/website_sale_tour_shop.js']" position="after">
                <script src="/website_product_filters/static/src/js/website_sale_tour_shop_inh.js" type="text/javascript"/>
            </xpath>
        </template>
        <template id="assets_frontend_product_filters_inh" inherit_id="website_sale_options.assets_frontend" name="Product Filters Assets Tests">
            <xpath expr="//script[@src='/website_sale_options/static/src/js/website_sale.test.js']" position="after">
                <script src="/website_product_filters/static/src/js/test_attributes.js" type="text/javascript"/>
            </xpath>
        </template>
        <!-- HERE ARE ALL THE UI/BEHAVIOUR JS FILES  -->
        <template id="assets_frontend_product_filters" inherit_id="website.assets_frontend" name="Product Filters Assets">
            <xpath expr="//script[last()]" position="after">
                <link rel='stylesheet' href='/website_product_filters/static/src/css/website_sale.css'/>
                <script src="/website_product_filters/static/src/js/test_controllers.js" type="text/javascript"/>
                <script src="/website_product_filters/static/src/js/website_sale_tour_filters.js" type="text/javascript"/>
                <script src="/website_product_filters/static/src/js/collapse_filters.js" type="text/javascript"/>
                <script src="/website_product_filters/static/src/js/collapsible_categories.js" type="text/javascript"/>
                <script src="/website_product_filters/static/src/js/sort_bar.js" type="text/javascript"/>
                <script src="/website_product_filters/static/src/js/send_extra_params.js" type="text/javascript"/>
            </xpath>
        </template>
    </data>
</openerp>
